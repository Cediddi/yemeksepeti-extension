{% trans_default_domain 'FOSUserBundle' %}
{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="row omb_row-sm-offset-3">
        <div class="col-xs-12 col-sm-6">
            <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    {{ form_widget(form.plainPassword.first, {'attr': {class: 'input-lg', placeholder: 'New password'}}) }}
                </div>
                <span class="help-block">{{ form_errors(form.plainPassword.first) }}</span>

                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    {{ form_widget(form.plainPassword.second, {'attr': {class: 'input-lg', placeholder: 'Repeat new password'}}) }}
                </div>
                <span class="help-block">{{ form_errors(form.plainPassword.second) }}</span>

                {{ form_rest(form) }}

                <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
