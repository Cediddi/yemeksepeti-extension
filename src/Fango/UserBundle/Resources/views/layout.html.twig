<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/login.css') }}"/>
    <title>Fango.me</title>
</head>
<body>
{% include '@FangoMain/Components/_ga.html.twig' %}
<div class="container">
    <div class="omb_login">

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}


        <h3 class="omb_authTitle">
            Fango
        </h3>

        <div class="row omb_row-sm-offset-3">
            <div class="col-xs-12 col-sm-6">
                <div class="line">
                    <span>Connect with Social Networks</span>
                </div>
            </div>
        </div>

        <div class="row omb_row-sm-offset-3 omb_socialButtons">
            <div class="col-xs-4 col-sm-2">
                <a href="{{ url('fango_user_facebook_login') }}" class="btn btn-lg btn-block omb_btn-facebook">
                    <i class="fa fa-facebook visible-xs"></i>
                    <span class="hidden-xs">Facebook</span>
                </a>
            </div>
            <div class="col-xs-4 col-sm-2">
                <a href="{{ url('fango_user_twitter_login') }}" class="btn btn-lg btn-block omb_btn-twitter">
                    <i class="fa fa-twitter visible-xs"></i>
                    <span class="hidden-xs">Twitter</span>
                </a>
            </div>
            <div class="col-xs-4 col-sm-2">
                <a href="{{ url('fango_user_instagram_login') }}" class="btn btn-lg btn-block omb_btn-instagram">
                    <i class="fa fa-instagram visible-xs"></i>
                    <span class="hidden-xs">Instagram</span>
                </a>
            </div>
        </div>

        <div class="row omb_row-sm-offset-3 omb_loginOrEmail">
            <div class="col-xs-12 col-sm-6">
                <div class="line">
                    <span>or with Email</span>
                </div>
            </div>
        </div>

        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>

</div>
</body>
</html>
